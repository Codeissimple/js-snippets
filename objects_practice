//Object.create

var personProto = {
  calculateAge: function() {
    console.log(2019 - this.yearOfBirth);
  }
};

var john = Object.create(personProto);
john.name = "john";
john.lastName = "Smith";
john.yearOfBirth = 1990;

var jane = Object.create(personProto, {
  name: { value: "jane" },
  yearOfBirth: { value: 1990 },
  job: { value: "designer" }
});

// primitives

var a = 23;
var b = a;
console.log(a)
console.log(b)

//Objects

var obj1 = {
  name: 'john',
  age: 26
};

var obj2 = obj1;
console.log(obj1)
console.log(obj2)


console.log(' ')

console.log(obj1.age)
console.log(obj2.age)
obj1.age =30;
console.log('As you see, the object has changed its age already')
console.log(obj1.age)
console.log(obj2.age)
//Functions

var age = 27;
var obj = {
  name: 'John',
  city: 'London'
};

function change(a, b) {
  a = 30;
  b.city = 'Lisbon';
}
console.log(obj.city);
change(age,obj);
console.log(age);
console.log(obj.city);
